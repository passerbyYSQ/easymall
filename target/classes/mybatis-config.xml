        <mapper resource="mapper/OrdersMapper.xml"/>
        <mapper resource="mapper/CartMapper.xml"/>
        <mapper resource="mapper/OrderitemMapper.xml"/>
        
        <!-- 配置接口所在的包 
        <package name="net.ysq.easymall.dao"/>-->
 	</mappers>
</configuration>
